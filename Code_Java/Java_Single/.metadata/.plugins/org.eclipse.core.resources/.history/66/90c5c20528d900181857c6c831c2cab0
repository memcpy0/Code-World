package myfirstproject;

public class TypeTest {
	public static void main(String[] args) {
		//整数类型
		byte b = 10;            //1字节 -128~127 char
		short s = 20;           //2字节
		int i = 30;             //4字节 这是整数默认的类型，即使使用long声明时也是integer类型，因此要加标识
		long x = 88888888888L;  //8字节，进行标识最好使用L，而非小写l，不使用L的话会把long类型的数当成integer
		System.out.println(b);
		System.out.println(s);
		System.out.println(i);
		System.out.println(x);
		
		//浮点类型
		float f = 12.3F;         //4个字节
		double d = 33.4;         //8个字节  直接写个小数, 默认的类型是double， 后可加D或d，一般不加
		System.out.println(f);
		System.out.println(d);
		
		//字符类型
		char c = 's';            //2个字节 
		System.out.println(c);
		
		//布尔类型
		boolean b1 = true;
		boolean b2 = false;
		System.out.println(b1);
		System.out.println(b2);
		//final float PI = 3.14F, PRICE = 13.86F, WEIGHT = 86.32F;	
		
		/* 包裹类型
		 * int --> Integer
		 * char --> Character
		 * booleans --> Boolean 
		 *  
		 * 字符串变量
		 * String s = new String(" ");
		 * String s; s=in.next(); s=in.nextLine();
		 * 
		 */
	}

}

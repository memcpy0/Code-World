class Circle {
	static double PI = 3.14159265;
	int radius;
	public double circumstance() {
		return (2*PI*radius);
	}
}

public class TestCircumference {
	public static void main(String[] args) {
		Circle cl = new Circle();
		cl.radius = 20;
		double circumf1 = cl.circumstance();
		System.out.println("Ô²µÄÖÜ³¤=" + circumf1);
	}
}

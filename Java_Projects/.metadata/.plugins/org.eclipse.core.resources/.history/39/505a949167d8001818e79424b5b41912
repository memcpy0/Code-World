package myfirstproject;

import java.util.Scanner;

public class HelloWorld {
	public static void main(String[] args) {   //Java程序的主入口方法
		HelloWorld hello = new HelloWorld();   // 新实例化HelloWorld类，创建类实例hello
		hello.sayHelloWorld("Tom");            // 调用该类的方法sayHelloWorld()，传入Tom字符串
		//System.out.println("我的第一个Java程序HelloWorld!");
	}
	
	public void sayHelloWorld(String str) {    // 声明一个带参数的方法
		System.out.println("传入的参数:"+str);  // 输出传入的参数
		System.out.println(str+" say HelloWorld");  // 输出字符串
		
//		Scanner iLine = new Scanner(System.in);
//		System.out.println("echo:" + iLine.nextLine());
		
//		System.out.print()
//		final int price=100;  // 常量
		Scanner i = new Scanner(System.in);
		int price = i.nextInt();
		double amount = i.nextInt();
		System.out.println(price + "-" + amount + "=" + (price-amount));
		
	}
}
